<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PiMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/exo_media_button_width</item>
        <item name="android:layout_height">@dimen/exo_media_button_height</item>
    </style>
    <style name="PiMediaButton.ScreenLock">
        <item name="android:src">@drawable/ic_lock_black_24dp</item>
        <item name="android:contentDescription">@string/pi_controls_screen_lock_description</item>
    </style>
    <style name="PiMediaButton.FullScreen">
        <item name="android:src">@drawable/ic_fullscreen_black_24dp</item>
        <item name="android:contentDescription">@string/pi_controls_screen_lock_description</item>
    </style>
    <style name="MY_DIALOG" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>