<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layoutDirection="ltr"
    android:background="#CC000000"
    android:orientation="vertical"
    tools:targetApi="28">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageButton android:id="@id/pi_prev"
            android:visibility="gone"
            style="@style/ExoMediaButton.Previous"/>

        <ImageButton android:id="@id/pi_rew"
            style="@style/ExoMediaButton.Rewind"/>

        <ImageButton android:id="@id/pi_shuffle"
            android:visibility="gone"
            style="@style/ExoMediaButton.Shuffle"/>

        <ImageButton android:id="@id/pi_repeat_toggle"
            android:visibility="gone"
            style="@style/ExoMediaButton"/>

        <ImageButton android:id="@id/pi_play"
            android:visibility="gone"
            style="@style/ExoMediaButton.Play"/>

        <ImageButton android:id="@id/pi_pause"
            style="@style/ExoMediaButton.Pause"/>

        <ImageButton android:id="@id/pi_ffwd"
            style="@style/ExoMediaButton.FastForward"/>

        <ImageButton android:id="@id/pi_next"
            android:visibility="gone"
            style="@style/ExoMediaButton.Next"/>

        <ImageButton android:id="@id/pi_vr"
            android:visibility="gone"
            style="@style/ExoMediaButton.VR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView android:id="@id/pi_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

        <View android:id="@id/pi_progress_placeholder"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="26dp"/>

        <TextView android:id="@id/pi_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:includeFontPadding="false"
            android:textColor="#FFBEBEBE"/>

    </LinearLayout>

</LinearLayout>
